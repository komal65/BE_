            </label>
          </div>
          <div class="form-check mb-3">
            <input class="form-check-input" type="radio" name="pronunciation" id="option2" value="1">
            <label class="form-check-label" for="option2">
              <button class="btn btn-outline-primary" onclick="playAudio(1)">Play Pronunciation 2</button>
            </label>
          </div>
          <div class="form-check mb-3">
            <input class="form-check-input" type="radio" name="pronunciation" id="option3" value="2">
            <label class="form-check-label" for="option3">
              <button class="btn btn-outline-primary" onclick="playAudio(2)">Play Pronunciation 3</button>
            </label>
          </div>
          <div class="form-check mb-3">
            <input class="form-check-input" type="radio" name="pronunciation" id="option4" value="3">
            <label class="form-check-label" for="option4">
              <button class="btn btn-outline-primary" onclick="playAudio(3)">Play Pronunciation 4</button>
            </label>
          </div>
        </div>

        <button id="next-btn" class="btn btn-success btn-lg btn-block" onclick="nextQuestion()">Next Question</button>
      </div>

      <div id="results-section" style="display: none;">
        <h3>Game Complete!</h3>
        <p class="lead">Your Score: <span id="final-score">0</span>/10</p>
        <button class="btn btn-primary" onclick="restartGame()">Play Again</button>
      </div>
    </div>
  </div>
</div>

<script>
const questions = [
  { word: 'नमस्ते', correctOption: 2 },
  { word: 'धन्यवाद', correctOption: 0 },
  { word: 'आप कैसे हैं', correctOption: 1 },
  { word: 'शुभ प्रभात', correctOption: 3 },
  { word: 'शुभ रात्रि', correctOption: 2 },
  { word: 'मैं ठीक हूं', correctOption: 1 },
  { word: 'क्या हाल है', correctOption: 0 },
  { word: 'फिर मिलेंगे', correctOption: 3 },
  { word: 'खुश रहो', correctOption: 2 },
  { word: 'स्वागत है', correctOption: 1 }
];

let currentQuestion = 0;
let score = 0;

function initGame() {
  displayQuestion();
}

function displayQuestion() {
  if (currentQuestion < questions.length) {
    document.getElementById('question-number').textContent = currentQuestion + 1;
    document.getElementById('hindi-word').textContent = questions[currentQuestion].word;
    // Reset radio buttons
    document.querySelectorAll('input[name="pronunciation"]').forEach(radio => radio.checked = false);
  } else {
    showResults();
  }
}

function playAudio(optionNumber) {
  // Here you would implement the audio playback logic
  // For now we'll just show an alert
  alert(`Playing pronunciation option ${optionNumber + 1}`);
}

function nextQuestion() {
  const selectedOption = document.querySelector('input[name="pronunciation"]:checked');
  
  if (!selectedOption) {
    alert('Please select an option before continuing');
    return;
  }

  if (parseInt(selectedOption.value) === questions[currentQuestion].correctOption) {
    score++;
  }

  currentQuestion++;
  displayQuestion();
}

function showResults() {
  document.getElementById('game-container').style.display = 'none';
  document.getElementById('results-section').style.display = 'block';
  document.getElementById('final-score').textContent = score;
}

function restartGame() {
  currentQuestion = 0;
  score = 0;
  document.getElementById('game-container').style.display = 'block';
  document.getElementById('results-section').style.display = 'none';
  displayQuestion();
}

// Initialize the game when page loads
initGame();
</script>


  
  
  

    
  
  




 
  
  
